#export TYPE=conllu

for dataset in disrpt23_deu_rst_pcc_conllu disrpt23_eng_dep_scidtb_conllu disrpt23_eng_pdtb_pdtb_conllu disrpt23_eng_rst_gum_conllu disrpt23_eng_rst_rstdt_conllu disrpt23_eng_sdrt_stac_conllu; 
do
 #does not work for multitask setup
 #rm -rf ./cache/$dataset
 echo "training on ..." $dataset
 python simple_mtl_run.py "${dataset}" --model-name $MODEL --epochs 30 --eval-every-step 500 \
   --batch-size 1 --gradient-accumulation-steps 4 --no_improvements_for_n_evals 10 \
	 --sampling-strategy ProportionalMultiTaskSampler --max-seq-length 180 \
	 --config-dir exp/tasks/configs/disrpt23 
 
done; 
